{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "pnpm dev-tauri-renderer",
    "devPath": "http://localhost:3333",
    "distDir": "../dist/tauri",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "OpenAI Translator",
    "version": "0.1.6"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "globalShortcut": {
        "all": true
      },
      "window": {
        "all": true
      },
      "clipboard": {
        "all": true
      },
      "http": {
        "all": false,
        "scope": [
          "https://api.openapi.com/*"
        ]
      },
      "notification": {
        "all": true
      },
      "fs": {
        "all": false,
        "scope": ["**", "$CONFIG/*/**"],
        "writeFile": true,
        "readFile": true,
        "readDir": true
      },
      "dialog": {
        "all": false,
        "message": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": [
          "xdotool"
        ]
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "xyz.yetone.apps.openai-translator",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "resources/*"
      ],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://github.com/yetone/openai-translator/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM3MzdGN0RCQjhGMkVENDEKUldSQjdmSzQyL2MzTjFaY0dIKzQzVnJYSjFwMlhFZmhjWmU5emZoVUt2OWExcVorbDRkK0NBaDMK"
    },
    "windows": [
      {
        "url": "src/tauri/index.html",
        "fullscreen": false,
        "width": 620,
        "height": 700,
        "minWidth": 540,
        "minHeight": 600,
        "resizable": true,
        "title": "OpenAI Translator",
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "visible": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/favicon.ico",
      "iconAsTemplate": true
    }
  }
}
